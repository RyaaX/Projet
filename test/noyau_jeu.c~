int fnbchevaux()
{
  int nbc;
  do{
    printf("le nombre de pions maximum est de 4\n");
    printf("Combien de pions ? :");
    scanf("%d", &nbc);
  }while((nbc > 4)||(nbc < 1));
  return(nbc);
}

