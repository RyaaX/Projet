int fnbchevaux()
{
  int nbc;
  printf("combien de pions ? :");
  scanf("%d",&nbc);
  while((nbc > 4)||(nbc < 0))
    {
      printf("le nombre de pions maximum est de 4\n");
      printf("Combien de pions ?");
      scanf("%d", &nbc);
      return(nbc);
    }
}
